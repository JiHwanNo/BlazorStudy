@using BlazorApp.Data;
<p>
    Users: <b>@Users.Count()</b>
</p>

<br />

<ul class="list-group">
    @foreach (UserData user in Users)
    {
        <li @key="user" class="list-group-item">
            <button type="button" class="bnt btn-link" @onclick="(() => KickUser(user))">[Kick]</button>
            <label style = "color : @Color"> @user.Name</label>
        </li>
    }
</ul>

@code {
    [CascadingParameter(Name = "ThemeColor")]
    string Color { get; set; }
    [Parameter]
    public List<UserData> Users { get; set; }

    [Parameter]
    public EventCallback CallbackTest { get; set; }

    protected override void OnInitialized()
    {
        Users.Add(new UserData { Name = "Name_01" });
        Users.Add(new UserData { Name = "Name_02" });
        Users.Add(new UserData { Name = "Name_03" });
    }

    public void AddUser(UserData user)
    {
        Users.Add(user);
    }

    public void KickUser(UserData name)
    {
        Users.Remove(name);

        CallbackTest.InvokeAsync(null);
    }
}
